<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="io.biologeek.expenses.OperationListActivity"
    tools:showIn="@layout/activity_operation_list">


        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:columnCount="3"
            android:rowCount="2">

            <ImageView
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_rowSpan="2"
                android:layout_columnWeight="0.2"
                android:layout_gravity="left"
                android:id="@+id/picture"
                android:src="@drawable/expenses"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_row="0"
                android:layout_columnWeight="0.7"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_column="1"
                android:id="@+id/category"
                android:text="Blabla1" />

            <TextView
                android:layout_height="wrap_content"
                android:layout_marginBottom="-5dp"
                android:gravity="right"
                android:text="50 â‚¬"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="26dp"
                android:layout_column="2"
                android:layout_columnWeight="0.2"
                android:id="@+id/amount"
                android:layout_gravity="left"
                android:textAlignment="gravity"
                android:layout_row="0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_columnWeight="0.7"
                android:textStyle="italic"
                android:layout_height="wrap_content"
                android:textColor="@color/midGrey"
                android:textSize="12dp"
                android:layout_column="1"
                android:layout_row="1"
                android:id="@+id/subcategory"
                android:text="Blabla3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="0.2"
                android:layout_column="2"
                android:layout_row="1"
                android:textSize="12dp"
                android:id="@+id/date"
                android:text="28/04" />
        </GridLayout>
</android.support.constraint.ConstraintLayout>
