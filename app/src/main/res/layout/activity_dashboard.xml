<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.biologeek.expenses.DashboardActivity">

    <LinearLayout
        android:layout_width="387dp"
        android:layout_height="123dp"
        android:layout_margin="40dp"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:paddingBottom="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginRight="30dp"
                android:layout_weight=".5"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/addImageView"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:tint="@color/black"
                    app:srcCompat="@drawable/ic_plus_circle" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center|top"
                    android:textSize="13dp"
                    android:textStyle="italic"
                    android:text="Ajouter une dépense"
                    android:textColor="@color/midGrey"
                    android:visibility="visible" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginRight="30dp"
                android:layout_weight=".5"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/listImageView"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:tint="@color/black"
                    app:srcCompat="@drawable/ic_list_dot" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center|top"
                    android:textSize="13dp"
                    android:textStyle="italic"
                    android:text="Dernières dépenses"
                    android:textColor="@color/midGrey"
                    android:visibility="visible" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
